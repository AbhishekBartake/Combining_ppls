{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "combiningFactory"
		},
		"LS_AzureDatabricks_accessToken": {
			"type": "secureString",
			"metadata": "Secure string for 'accessToken' of 'LS_AzureDatabricks'"
		},
		"On_prem_SQL_server_password": {
			"type": "secureString",
			"metadata": "Secure string for 'password' of 'On_prem_SQL_server'"
		},
		"AzureDataLakeStorage1_properties_typeProperties_url": {
			"type": "string",
			"defaultValue": "https://combinationsc.dfs.core.windows.net/"
		},
		"LS_AzureDatabricks_properties_typeProperties_existingClusterId": {
			"type": "string",
			"defaultValue": "0205-102103-8mdezmvv"
		},
		"On_prem_SQL_server_properties_typeProperties_server": {
			"type": "string",
			"defaultValue": ".\\SQLEXPRESS"
		},
		"On_prem_SQL_server_properties_typeProperties_database": {
			"type": "string",
			"defaultValue": "SQLTraining"
		},
		"On_prem_SQL_server_properties_typeProperties_userName": {
			"type": "string",
			"defaultValue": "adf_user"
		},
		"containerUri": {
			"type": "string",
			"metadata": "URI to storage account containing linked ARM templates"
		},
		"containerSasToken": {
			"type": "string",
			"metadata": "Sas token to storage account containing linked ARM templates"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "combiningFactory_ArmTemplate_0",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2024-03-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_0.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					},
					"LS_AzureDatabricks_accessToken": {
						"value": "[parameters('LS_AzureDatabricks_accessToken')]"
					},
					"On_prem_SQL_server_password": {
						"value": "[parameters('On_prem_SQL_server_password')]"
					},
					"AzureDataLakeStorage1_properties_typeProperties_url": {
						"value": "[parameters('AzureDataLakeStorage1_properties_typeProperties_url')]"
					},
					"LS_AzureDatabricks_properties_typeProperties_existingClusterId": {
						"value": "[parameters('LS_AzureDatabricks_properties_typeProperties_existingClusterId')]"
					},
					"On_prem_SQL_server_properties_typeProperties_server": {
						"value": "[parameters('On_prem_SQL_server_properties_typeProperties_server')]"
					},
					"On_prem_SQL_server_properties_typeProperties_database": {
						"value": "[parameters('On_prem_SQL_server_properties_typeProperties_database')]"
					},
					"On_prem_SQL_server_properties_typeProperties_userName": {
						"value": "[parameters('On_prem_SQL_server_properties_typeProperties_userName')]"
					}
				}
			},
			"dependsOn": []
		}
	]
}